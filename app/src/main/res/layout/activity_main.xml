<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pertemuan 2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

    <EditText
        android:id="@+id/etAngka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Angka"
        android:inputType="number"
        android:textAlignment="center"
        />




    <Button
        android:id="@+id/btnSin"
        android:layout_below="@+id/etAngka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIN"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:id="@+id/btnCos"
        android:layout_below="@+id/etAngka"
        android:layout_toRightOf="@+id/btnSin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COS"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btnTan"
        android:layout_below="@+id/etAngka"
        android:layout_toRightOf="@+id/btnCos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAN"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/btnCsc"
        android:layout_below="@+id/btnSin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSC"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:id="@+id/btnSec"
        android:layout_below="@+id/btnSin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEC"
        android:layout_toRightOf="@+id/btnCsc"
        />
    <Button
        android:id="@+id/btnCot"
        android:layout_below="@+id/btnSin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COT"
        android:layout_toRightOf="@+id/btnSec"
        />

    <Button
        android:id="@+id/btnLog"
        android:layout_below="@+id/btnCsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tvHasil"
        android:layout_below="@+id/btnLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="0.0"
        />










</RelativeLayout>